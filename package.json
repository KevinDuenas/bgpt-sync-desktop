{
  "name": "business-gpt-sync",
  "version": "1.0.1",
  "description": "Business GPT Desktop Sync App",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "node start.js",
    "dev:main": "tsc -p tsconfig.main.json && sh -c 'unset ELECTRON_RUN_AS_NODE && unset ELECTRON_NO_ATTACH_CONSOLE && npx electron .'",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "package": "electron-builder",
    "start": "sh -c 'unset ELECTRON_RUN_AS_NODE && unset ELECTRON_NO_ATTACH_CONSOLE && electron .'"
  },
  "keywords": [
    "electron",
    "sync",
    "business-gpt"
  ],
  "author": {
    "name": "Business GPT",
    "email": "support@businessgpt.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.294.0",
    "node-cron": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.businessgpt.sync",
    "productName": "Business GPT Sync",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "KevinDuenas",
      "repo": "bgpt-sync-desktop",
      "releaseType": "release"
    }
  }
}
